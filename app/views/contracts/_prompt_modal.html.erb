<div id="promptModal" class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full" data-controller="modal" data-contract-id="<%= @contract.id %>">
  <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
    <div class="mt-3">
      <h3 class="text-lg leading-6 font-medium text-gray-900">Enter Your Query</h3>
      <div class="mt-2 px-7 py-3">
        <textarea id="promptText" 
                  class="w-full px-3 py-2 text-gray-700 border rounded-lg focus:outline-none focus:border-indigo-500" 
                  rows="4"
                  placeholder="What would you like to know about this contract?"></textarea>
      </div>
      <div class="flex justify-end gap-3 px-4 py-3">
        <button id="closePromptModal" 
                class="px-4 py-2 bg-gray-200 text-gray-800 text-base font-medium rounded-md shadow-sm hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-gray-300">
          Cancel
        </button>
        <button id="submitPrompt" 
                class="px-4 py-2 bg-indigo-600 text-white text-base font-medium rounded-md shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500">
          Submit
        </button>
      </div>
    </div>
  </div>
</div>